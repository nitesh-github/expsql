<%- include('header') %>

<div class="">
  <div class="sign-in__wrapper">
    <div class="sign-in__backdrop"></div>
    <form class="shadow p-4 bg-white rounded" method="POST" action="/admin/register">
      <div class="h4 mb-2 text-center">Sign Up</div>

      <% if (message) { %>
        <div class="alert alert-<%= type %>" role="alert">
          <%= message %>
        </div>
      <% } %>
      
      
      <div class="mb-2">
        <label class="form-label" for="name">Name</label
        ><input
          placeholder="Name"
          required=""
          type="text"
          id="name"
          name="name"
          class="form-control"
          value=""
        />
      </div>
      <div class="mb-2">
        <label class="form-label" for="username">Email</label
        ><input
          placeholder="Email"
          required=""
          type="text"
          id="email"
          name="email"
          class="form-control"
          value=""
        />
      </div>
      <div class="mb-2">
        <label class="form-label" for="password">Password</label
        ><input
          placeholder="Password"
          required=""
          type="password"
          id="password"
          name="password"
          class="form-control"
          value=""
        />
      </div>
     
      <button type="submit" class="w-100 btn btn-primary">Sign Up</button>
      <div class="d-grid justify-content-start">
        <a class="text-muted px-0" href="/forget-password" data-discover="true"
          >Forgot password?</a
        >
      </div>
      <div class="d-block justify-content-center">
        Already have an account?
        <a class="text-muted px-0" href="/admin/login" data-discover="true"
          >Sign in</a
        >
      </div>
    </form>
    <div
      class="w-100 mb-2 position-absolute bottom-0 start-50 translate-middle-x text-white text-center"
    >
      Â©2025 Developer | All rights reserved.
    </div>
  </div>
</div>

<%- include('footer') %>
